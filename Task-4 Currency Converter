import java.util.Scanner;

public class CurrencyConverter {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        double usdRate = 83.0;
        double eurRate = 90.0;

        System.out.println("Available currencies: INR, USD, EUR");
        System.out.print("Enter base currency (e.g., INR): ");
        String base = sc.next().toUpperCase();
        System.out.print("Enter target currency (e.g., USD): ");
        String target = sc.next().toUpperCase();
        System.out.print("Enter amount: ");
        double amount = sc.nextDouble();

        double converted = 0;

        if (base.equals("INR") && target.equals("USD")) {
            converted = amount / usdRate;
        } else if (base.equals("USD") && target.equals("INR")) {
            converted = amount * usdRate;
        } else if (base.equals("INR") && target.equals("EUR")) {
            converted = amount / eurRate;
        } else if (base.equals("EUR") && target.equals("INR")) {
            converted = amount * eurRate;
        } else {
            System.out.println("Conversion not supported.");
            return;
        }

        System.out.printf("Converted amount: %.2f %s%n", converted, target);
        sc.close();
    }
}
